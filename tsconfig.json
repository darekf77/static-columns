{
  "extends": "./tsconfig.isomorphic.json",
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "strictNullChecks": false,
    "rootDir": "./src",
    "paths": {
      "@lib": [
        "./src/lib"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "static-columns/src": [
        "./src/lib"
      ],
      "static-columns/src/*": [
        "./src/lib/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/assets"
  ]
}